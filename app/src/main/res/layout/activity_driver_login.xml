<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.cabapp.deep.DriverLoginActivity"
    android:orientation="vertical"

    android:background="@drawable/custom_bckground"
    >
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView
            android:id="@+id/cplogo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/drilogo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/email"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD100"
                android:backgroundTint="#FFD100"
                android:fontFamily="@font/avantgrande"
                android:hint="E-mail" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD100"
                android:inputType="textPassword"
                android:backgroundTint="#FFD100"
                android:hint="Password"
                android:fontFamily="@font/avantgrande"
                android:layout_marginBottom="5sp"/>

        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="fill_parent"
            android:background="@drawable/buttonshape"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="2dp"
            android:padding="12dp"
            android:text="Login"
            android:id="@+id/login"
            android:textColor="#000000"
            android:shadowColor="#A8A8A8"
            android:fontFamily="@font/avantgrande"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"

            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Not a member?"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/avantgrande"
            android:id="@+id/mem"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="REGISTER"
            android:textColor="#000000"
            android:fontFamily="@font/avantgrande"
            android:id="@+id/register"

            />

    </LinearLayout>

</ScrollView>
